<div id="<%= dom_id donation %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Sending status:</strong>
    <%= donation.sending_status %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Recieving status:</strong>
    <%= donation.recieving_status %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Process status:</strong>
    <%= donation.process_status %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this donation", donation, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this donation', edit_donation_path(donation), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
