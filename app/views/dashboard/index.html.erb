<!-- component -->
<link rel="stylesheet" href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css" />

<div class="min-h-screen flex flex-row bg-gray-100">
  <%= render('partials/navbar') %>
  <main class="h-screen w-full bg-[#F4ECEC] flex flex-col justify-between">
    <div class = "h-1/2 p-5 border-2">
        <span class="mx-20 mt-6 text-4xl no-underline">Latest available exchanges</span>
      <div class="h-3/4 mx-20 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-12 my-10 bg-transparent overflow-y-scroll drop-shadow-md">
        <% @exchanges.each do |exchange| %>
          <div class="px-5">
            <div class="bg-white rounded-t-md ">
              <div class="mt-10">
                <div class="p-2 relative">
                  <p class="text-lg mt-2 mb-0 mx-2 font-semibold"><%= exchange.sended_book.title %></p>
                  <p class="text-sm mx-2">By <%= exchange.sended_book.author %></p>
                  <p class="text-sm mb-2 mx-2">Owner:</p>
                  <div class="flex items-center">
                    <%= link_to "#{exchange.sending_user.first_name} #{exchange.sending_user.last_name}", exchange.sending_user, class: "my-0 mx-2 text-gray-600 font-bold no-underline hover:text-gray-900"%>
                  </div>
                  <button class="bg-violet-500 hover:bg-violet-700 py-2 px-4 rounded-full absolute -top-6 p-0.5 border-2 right-6">
                    <%= link_to "Details", exchange, class: "text-white font-bold no-underline"%>
                  </button>
                </div>
              </div>
            </div>
          </div>
          <% end %>
      </div>
    </div>
    <div class = "h-1/2 p-5">
        <span class="mx-20 mt-6 text-4xl no-underline">Latest available donations</span>
      <div class="h-3/4 mx-20 grid grid-cols-2 gap-12 md:grid-cols-3 lg:grid-cols-4 my-10 bg-transparent overflow-y-scroll drop-shadow-md">
        <% @donations.each do |donation| %>
          <div class="px-5">
              <div class="bg-white rounded-t-md ">
                <div class="mt-10">
                  <div class="p-2 relative">
                    <p class="text-lg mt-2 mb-0 mx-2 font-semibold"><%= donation.sended_book.title %></p>
                    <p class="text-sm mx-2">By <%= donation.sended_book.author %></p>
                    <p class="text-sm mb-2 mx-2">Owner:</p>
                    <div class="flex items-center">
                      <%= link_to "#{donation.sending_user.first_name} #{donation.sending_user.last_name}", donation.sending_user, class: "my-0 mx-2 text-gray-600 font-bold no-underline hover:text-gray-900"%>
                    </div>
                    <button class="bg-violet-500 hover:bg-violet-700 py-2 px-4 rounded-full absolute -top-6 p-0.5 border-2 right-6">
                      <%= link_to "Details", donation, class: "text-white font-bold no-underline"%>
                    </button>
                  </div>
                </div>
              </div>
          </div>
        <% end %>
      </div>
    </div>
    </main>
</div>


